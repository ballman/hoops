<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
  <head>
    <title>WereFrog College Basketball</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults, 'sorttable', 'bluff/excanvas' , 'bluff/js-class', 'bluff/bluff-min'%>
    <%= csrf_meta_tag %>

   </head>
    <body bgcolor="<%= session[:authorized] ? 'e8ffdc' : '#f8f8f8' %>">
      <div id="banner">
      </div>
      <div id="side">
        <ul class="menu">
          <li> <%= link_to 'Tourney Teams', { :controller => 'team', :action => 'tourney' } %> </li>
          <li> <%= link_to 'All Teams', { :controller => 'team', :action => 'list' } %> </li>
          <li> <%= link_to 'Team Stats', { :controller => 'team_stats', :action => 'list' } %> </li>
          <li> <%= link_to 'Team Foe Stats', { :controller => 'team_stats', :action => 'list', :foe => 1 } %> </li>
          <li> <%= link_to 'Team Diff Stats', { :controller => 'team_stats', :action => 'list', :foe => 'diff' } %> </li>
          <li> <%= link_to 'Team Comparison', { :controller => 'team_stats', :action => 'compare' } %> </li>
          <li> <a href="http://hoopsmap.rickbradley.com/venue/show">The Map</a> </li>
      		<% if session[:authorized] -%>
         	 <li> <%= link_to 'Logout', { :controller => 'team_stats', :action => 'login', :key => 'logout' } %> </li>
      		<% end -%>
    	</ul>

        <h4>brackets</h4>
        <ul>
     		 <li> CBS Bracket <a href="http://cbs.sportsline.com/collegebasketball/mayhem/brackets/viewable_men">view</a> <a href="http://cbs.sportsline.com/collegebasketball/mayhem/brackets/printable_men">print</a></li>
      		<li> ESPN Bracket <a href="http://espn-att.starwave.com/i/ncaa/06mens_bracket.gif">GIF</a> <a href="http://espn-att.starwave.com/i/ncaa/06mens_bracket.pdf">PDF</a></li>
      		<li> <a href="http://www.ncaa.com/brackets/basketball/men/">FinalFour.net</a></li>
      		<li> <a href="http://msn.foxsports.com/id/3461072_37_31.pdf">Fox Sports (Wendy's Burger) PDF</a></li>
    	</ul>
     </div>
     <div id="main">
		<% if flash[:notice] -%>
	    	<div id="notice">
 				<ul>
        			<% flash[:notice].each do | notice | -%>
          				<li><%= notice %></li>
        			<% end -%>
      			</ul>
    		</div>
    	<% end -%>
    	<%= yield %>
	    	<div style="clear:left;height:0;line-height:0" >
		
		
			</div>	
	</div>
    </body>
</html>
